# MAXY Chat Backend Configuration
# Copy this to .env and adjust values as needed

# ===== SERVER CONFIGURATION =====
HOST=0.0.0.0
PORT=8000
DEBUG=False

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===== CORS CONFIGURATION =====
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# ===== FILE PROCESSING =====
# Maximum file upload size in bytes (10MB default)
MAX_FILE_SIZE=10485760
ENABLE_FILE_PROCESSING=True
ENABLE_CHARTS=True
ENABLE_WIKIPEDIA=True

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===== DATABASE CONFIGURATION =====
# SQLite: sqlite:///./maxy_chat.db
# PostgreSQL: postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///./maxy_chat.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===== AI MODEL CONFIGURATION =====
THINKING_ENABLED=True
SHOW_CONFIDENCE_SCORES=True
MAX_CONVERSATION_HISTORY=50

# ===== FEATURE FLAGS =====
ENABLE_ANALYTICS=True
ENABLE_FEEDBACK=True
ENABLE_EXPORT=True

# ===== CACHE CONFIGURATION =====
CACHE_TTL=3600
ENABLE_CACHE=True

# ===== API CONFIGURATION =====
# These are set in code but can be overridden if needed
API_TITLE=MAXY Chat Backend
API_VERSION=2.0.0

# ===== OPTIONAL: EXTERNAL SERVICES =====
# Wikipedia API
# WIKIPEDIA_TIMEOUT=10

# Redis (if using for caching)
# REDIS_URL=redis://localhost:6379/0

# Database (if using PostgreSQL)
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your_password
# DATABASE_HOST=localhost
# DATABASE_NAME=maxy_chat

# ===== SECURITY =====
# For future authentication
# SECRET_KEY=your-super-secret-key-change-this
# ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30
